<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/md_blue_900">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp"/>

            <stroke
                android:width="1dp"
                android:color="@color/md_blue_800"/>

            <solid
                android:color="@color/md_blue_800"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <corners android:radius="5dp"/>

            <stroke
                android:width="1dp"
                android:color="@color/md_blue_500"/>

            <solid
                android:color="@color/md_blue_500"/>

            <padding
                android:left="30dp"
                android:top="10dp"
                android:right="30dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</ripple>
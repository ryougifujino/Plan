<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/md_white_1000</item>
        <item name="tabMaxWidth">150dp</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <!-- ______________________module______________________ -->

    <!-- planning_display_spec_event_detail -->
    <style name="PlanningDisplaySpecEventDetailWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="PlanningDisplaySpecEventDetailBadge">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:tint">@color/md_teal_600</item>
    </style>

    <style name="PlanningDisplaySpecEventDetailItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">65dp</item>
        <item name="android:textColor">@color/label</item>
    </style>
    <style name="PlanningDisplaySpecEventDetailItemContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">65dp</item>
    </style>

    <!-- ______________________module#end______________________ -->

</resources>

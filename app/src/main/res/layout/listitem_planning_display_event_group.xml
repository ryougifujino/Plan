<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">


    <RelativeLayout
        android:id="@+id/rl_planning_display_event_group"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_planning_display_event_group_event_count"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_badge_bg"
            android:textColor="@color/bpWhite"
            android:text="6个计划"/>

        <TextView
            android:id="@+id/tv_planning_display_event_group_create_time"
            android:layout_alignBaseline="@id/tv_planning_display_event_group_event_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年3月25日 4:47 3天前"/>

        <View
            android:id="@+id/label_view_planning_display_event_group_line"
            android:layout_margin="10dp"
            android:layout_below="@id/tv_planning_display_event_group_event_count"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bpDark_gray" />

        <TextView
            android:id="@+id/tv_view_planning_display_event_group_description"
            android:layout_below="@id/label_view_planning_display_event_group_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="组描述组描述组"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>

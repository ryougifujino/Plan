<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.planning.display.fragment.PlanningDisplaySpecificFragment">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:animateLayoutChanges="true"
            android:layout_width="wrap_content"
            android:layout_height="45dp">

            <android.support.design.widget.TabLayout
                android:id="@+id/tl_planning_display_specific"
                style="@style/CustomSubTabLayout">
            </android.support.design.widget.TabLayout>

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/iv_planning_display_specific_next_month"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"/>
            <TextView
                android:layout_toLeftOf="@id/iv_planning_display_specific_next_month"
                android:layout_centerVertical="true"
                android:text="2016/3/10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/md_blue_50"
                android:id="@+id/tv_planning_display_specific_date_selector"
                android:background="?android:attr/selectableItemBackground"/>
            <ImageView
                android:layout_toLeftOf="@id/tv_planning_display_specific_date_selector"
                android:id="@+id/iv_planning_display_specific_previous_month"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp"/>

        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_planning_display_specific"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
</LinearLayout>

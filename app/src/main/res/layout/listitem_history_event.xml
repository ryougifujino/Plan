<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_margin_horizontal"
    android:layout_marginRight="@dimen/item_margin_horizontal"
    android:layout_marginTop="@dimen/item_margin_vertical"
    android:layout_marginBottom="@dimen/item_margin_vertical">

    <LinearLayout
        android:id="@+id/ll_history_event"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="130dp"
        android:layout_height="195dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_history_expected_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="2015/10/4"
            android:textAlignment="center"
            android:textColor="@color/md_grey_800"
            android:textSize="20sp"/>

        <View
            android:id="@+id/v_history_divider"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/md_grey_300"/>

        <TextView
            android:id="@+id/tv_history_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="计划详情计划详情计划详情计划详情计划详情计划详情计划详情计划详情计划详情"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
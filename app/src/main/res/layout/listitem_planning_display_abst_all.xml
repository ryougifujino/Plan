<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_planning_display_abst_all_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="组描述组描述组"/>

        <TextView
            android:id="@+id/tv_planning_display_abst_all_create_time"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:layout_below="@id/tv_planning_display_abst_all_description"
            android:background="@drawable/common_badge_bg_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年3月25日7:21"/>

        <ImageView
            android:id="@+id/img_planning_display_abst_all_more"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:tint="@color/md_grey_700"
            android:src="@drawable/planning_display_toolbar_more"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>

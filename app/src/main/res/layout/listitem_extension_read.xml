<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/md_white_1000">
    <RelativeLayout
        android:id="@+id/rl_extension_read_listitem"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_extension_read_cover"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/extension_read_plan"/>

        <TextView
            android:id="@+id/tv_extension_read_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_extension_read_cover"
            android:text="解忧杂货店"
            android:textSize="17sp"/>

        <LinearLayout
            android:id="@+id/label_ll_extension_read_rating"
            android:layout_below="@id/tv_extension_read_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_extension_read_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rb_extension_read_ranting"
                style="?attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_extension_read_ranting"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.6"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_extension_read_publish_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_ll_extension_read_rating"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_extension_read_cover"
            android:text="(日)东野圭吾/南海出版公司/2014-5"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
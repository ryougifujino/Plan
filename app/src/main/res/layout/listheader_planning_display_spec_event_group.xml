<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_planning_display_event_spec_group_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="于2016年3月25日04时47分35秒创建"/>
        
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/label_planning_display_event_spec_group_learning_count"
            android:layout_below="@id/tv_planning_display_event_spec_group_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习计划"/>
        <TextView
            android:id="@+id/tv_planning_display_event_spec_group_learning_count"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/label_planning_display_event_spec_group_learning_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3个"/>
        
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/label_planning_display_event_spec_group_normal_count"
            android:layout_below="@id/label_planning_display_event_spec_group_learning_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通计划"/>
        <TextView
            android:id="@+id/tv_planning_display_event_spec_group_normal_count"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/label_planning_display_event_spec_group_normal_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5个"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/label_planning_display_event_spec_group_progress"
            android:layout_below="@id/label_planning_display_event_spec_group_normal_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成进度"/>
        <TextView
            android:id="@+id/tv_planning_display_event_spec_group_progress"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/label_planning_display_event_spec_group_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4/8"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

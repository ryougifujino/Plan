<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/ll_planning_display_spec_week"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <ImageView
            android:id="@+id/iv_planning_display_spec_week_week"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/mon"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView
                android:id="@+id/tv_planning_display_spec_week_date"
                android:textSize="25sp"
                android:textColor="@color/md_grey_700"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3月21日,未完成"/>

            <TextView
                android:id="@+id/tv_planning_display_spec_week_event_type"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:alpha="0.5"
                android:layout_alignParentRight="true"
                android:textColor="@color/md_grey_300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学"/>


            <TextView
                android:id="@+id/tv_planning_display_spec_week_description"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_planning_display_spec_week_date"
                android:maxLength="30"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划描述计划描述计划描述计划描述计划描述计划描述"/>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <View
                    android:background="@color/md_grey_300"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/delete"
                    android:layout_marginLeft="50dp"
                    android:textSize="17sp"
                    android:textColor="@color/md_red_300"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"/>

                <TextView
                    android:layout_toRightOf="@id/delete"
                    android:layout_marginLeft="50dp"
                    android:textSize="17sp"
                    android:textColor="@color/md_light_green_300"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详情"/>

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

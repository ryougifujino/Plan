<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_planning_display_spec_week_week"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/common_monday"/>

        <RelativeLayout
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_planning_display_spec_week_event_type"
                android:background="@drawable/common_badge_bg"
                android:textColor="@color/bpWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学"/>

            <TextView
                android:id="@+id/tv_planning_display_spec_week_date"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3月21日星期一"/>

            <TextView
                android:id="@+id/tv_planning_display_spec_week_process"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未开始"/>

            <TextView
                android:id="@+id/tv_planning_display_spec_week_description"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_planning_display_spec_week_event_type"
                android:maxLength="30"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划描述计划描述计划描述计划描述计划描述计划描述"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
